<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boje2">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Активность регистрации, которая будет первой (показана при старте приложения) -->
        <activity android:name=".RegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность для услуг -->
        <activity android:name=".MainActivity">
            <!-- Можно добавить intent-filter, если нужно запустить с другого места -->
        </activity>

        <!-- Активность для сотрудников -->
        <activity android:name=".EmployeeActivity">
            <!-- Можно добавить intent-filter, если нужно запустить с другого места -->
        </activity>

    </application>

</manifest>
